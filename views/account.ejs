<!DOCTYPE html>
<html>
<head>
    <% include partials/head.ejs %>
</head>
<body ng-app="userapp" ng-controller="accountCtrl" ng-init="userService.initAccount('<%= user.id %>')">

<% include partials/nav.ejs %>
